package com.macro.gUI.assist
{


	/**
	 * 布局对齐方式
	 * @author Macro776@gmail.com
	 *
	 */
	public class LayoutAlign
	{
		/**
		 * 左对齐
		 */
		public static const LEFT:int = 0x01;

		/**
		 * 居中对齐
		 */
		public static const CENTER:int = 0x02;

		/**
		 * 右对齐
		 */
		public static const RIGHT:int = 0x04;



		/**
		 * 顶部对齐
		 */
		public static const TOP:int = 0x10;

		/**
		 * 垂直居中对齐
		 */
		public static const MIDDLE:int = 0x20;

		/**
		 * 底端对齐
		 */
		public static const BOTTOM:int = 0x40;
	}
}
